---

# ------------------------------------------------------------------------------
# General Properties
# ------------------------------------------------------------------------------
id: "tap_mongo"
name: "MongoDB source test database"
type: "tap-mongodb"
owner: "test-runner"


# ------------------------------------------------------------------------------
# Source (Tap) - Mongo connection details
# ------------------------------------------------------------------------------
db_conn:
  host: "mongodb_source"               	# Mongodb host
  port: 27017                           # Mongodb port
  user: "mongoUser"                  	# Mongodb user
  password: "Password1"                 # Mongodb plain string or vault encrypted
  auth_database: "admin"            	# Mongodb database to authenticate on
  dbname: "test"           				# Mongodb database name to sync from
#  replica_set: null        				# Mongodb replica set name, default null

# ------------------------------------------------------------------------------
# Destination (Target) - Target properties
# Connection details should be in the relevant target YAML file
# ------------------------------------------------------------------------------
target: "postgres_dwh"                   # ID of the target connector where the data will be loaded
batch_size_rows: 1000                  # Batch size for the stream to optimise load performance

# ------------------------------------------------------------------------------
# Source to target Schema mapping
# ------------------------------------------------------------------------------
schemas:
  - source_schema: "test"
    target_schema: "ppw_e2e_tap_mongodb"

    tables:
      - table_name: "listings"
        replication_method: "FULL_TABLE"
